alias brave='brave-browser-nightly --enable-features=UseOzonePlatform --ozone-platform=wayland'
alias gimp='flatpak run org.gimp.GIMP//beta'

alias bat='bat --force-colorization --theme ansi'
alias exa='exa -lah@ --colour=auto --icons --no-permissions --git --group-directories-first'
alias exatree='exa --tree --level=2 --colour=auto'
alias fd='fd -uui -j 4'
alias procs='procs -t --color always --theme dark'
alias rg='rg -uuudp -j 4'

alias mutemic='amixer set Capture cap'
alias unmutemic='amixer set Capture nocap'
alias incmic='amixer set Capture 1db+'
alias decmic='amixer set Capture 1db-'
